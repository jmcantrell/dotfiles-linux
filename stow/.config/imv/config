[options]
overlay = true
overlay_font = monospace:8
overlay_position_bottom = true

[binds]
<Ctrl+Delete> = exec trash-put "$imv_current_file"; next
<Ctrl+Print> = exec set-background "$imv_current_file"
<Ctrl+y> = exec wl-copy -n "$imv_current_file"; exec notify-send -i edit-copy "Image path copied to clipboard:" "<u>$imv_current_file</u>"

<Ctrl+r> = rotate by 90

<Ctrl+0> = reset
<Ctrl+minus> = zoom -1
<Ctrl+equal> = zoom 1
