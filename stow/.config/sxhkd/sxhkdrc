# lock the desktop session
ctrl + super + q
	lock

# reload this config file
ctrl + shift + r
	killall -USR1 sxhkd

# run command (sorted by most recently used)
super + space
	dmenu_run_mru

# run last command from dmenu
super + alt + space
	dmenu_run_prev

# open a terminal (in the working directory of the active window)
super + Return
	cd "$(xpwd)" && terminal

super + b
	browser

super + B
	browser-private

# open an editor (in the working directory of the active window)
super + e
	cd "$(xpwd)" && terminal -e editor

# open a file manager (in the working directory of the active window)
super + f
	cd "$(xpwd)" && terminal -e ranger

super + {Up,Down}
	audio-volume {up,down}

super + alt + {Up,Down}
	audio-volume {max,mute}

XF86Audio{Raise,Lower}Volume
	audio-volume {up,down}

XF86AudioMute
	audio-volume mute

super + Pause
	playerctl play-pause

super + {Left,Right}
	playerctl {previous,next}

XF86Audio{Prev,Next}
	playerctl {previous,next}

# open a process manager
super + Escape
	terminal -e glances

# copy text snippets
super + Insert; c
	dmenu_snip -c

# edit text snippets
super + Insert; e
	dmenu_snip -e

# create text snippet from clipboard
super + Insert; s
	dmenu_snip -s

# type text snippets
super + Insert; t
	dmenu_snip -t

# copy password
super + Delete; c
	dmenu_pass -c

# generate password
super + Delete; g
	dmenu_pass -gc

# copy the working directory path of the active window
super + Home; u
	xpwd -cn

# copy the working directory path of the selected window
super + Home; w
	xpwd -cnw

# add an output oriented to the primary
super + End; {h,j,k,l}
	xrandr-orient {left-of,below,above,right-of}

# automatically add outputs, mirror primary, remove all
super + End; {d,c,q}
	xrandr-{detect,clone,off}

# capture desktop
super + Print; i; d
	icap -ncoa

# capture active window
super + Print; i; u
	icap -ncoa -u

# capture selected window
super + Print; i; w
	icap -ncoa -w

# capture selected region
super + Print; i; s
	icap -ncoa -s

# record desktop
super + Print; m; d
	mcap -ncoa

# record active window
super + Print; m; u
	mcap -ncoa -u

# record selected window
super + Print; m; w
	mcap -ncoa -w

# record selected region
super + Print; m; s
	mcap -ncoa -s

# record region around mouse
# keep mouse in the center of the rectangle
super + Print; m; c
	mcap -ncoa -m centered

# record region around mouse
# only move rectangle when mouse is 10-90 pixels from edge
super + Print; m; {1-9}
	mcap -ncoa -m {1-9}0

# stop recording
super + Print; m; q
	mcap -x
