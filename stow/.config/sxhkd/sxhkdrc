# reload this config file
ctrl + shift + r
	killall -USR1 sxhkd

# lock the desktop session
ctrl + super + q
	xlock

# open a terminal (in the working directory of the active window)
super + Return
	cd "$(xpwd)" && terminal

# run command (sorted by most recently used)
super + space
	dmenu-run-mru

# run last command from dmenu
super + alt + space
	dmenu-run-prev

# copy text snippets
super + Insert; c
	dmenu-snip -c

# edit text snippets
super + Insert; e
	dmenu-snip -e

# create text snippet from clipboard
super + Insert; s
	dmenu-snip -s

# type text snippets
super + Insert; t
	dmenu-snip -t

# copy password
super + Delete; c
	dmenu-pass

# generate password
super + Delete; g
	dmenu-pass -g

super + b
	browser

super + B
	browser-private

# open an editor (in the working directory of the active window)
super + e
	cd "$(xpwd)" && terminal -e editor

# open a file manager (in the working directory of the active window)
super + f
	cd "$(xpwd)" && terminal -e ranger

super + {Up,Down}
	audio-volume {up,down}

super + alt + {Up,Down}
	audio-volume {max,mute}

XF86Audio{Raise,Lower}Volume
	audio-volume {up,down}

XF86AudioMute
	audio-volume mute

super + Pause
	playerctl play-pause

super + {Left,Right}
	playerctl {previous,next}

XF86Audio{Prev,Next}
	playerctl {previous,next}

# open a process manager
super + Escape
	terminal -e glances

# copy the working directory path of the active window
super + Home; u
	xpwd -cn

# copy the working directory path of the selected window
super + Home; w
	xpwd -cnw

# add an output oriented to the primary
super + End; {h,j,k,l}
	xrandr-orient {left-of,below,above,right-of}

# automatically add outputs, mirror primary, remove all
super + End; {d,c,q}
	xrandr-{detect,clone,off}

# capture desktop
super + Print; i; d
    capture-desktop-image ~/'Desktop %c'.png

# capture active window
super + Print; i; u
    capture-desktop-image -u ~/'Window %c'.png

# capture selected window
super + Print; i; w
    capture-desktop-image -w ~/'Window %c'.png

# capture selected region
super + Print; i; s
    capture-desktop-image -s ~/'Region %c'.png

# record desktop
super + Print; m; d
    capture-desktop-video ~/'Desktop %c'.gif

# record active window
super + Print; m; u
    capture-desktop-video -u ~/'Desktop %c'.gif

# record selected window
super + Print; m; w
    capture-desktop-video -w ~/'Desktop %c'.gif

# record selected region
super + Print; m; s
    capture-desktop-video -s ~/'Desktop %c'.gif

# record region around mouse
# keep mouse in the center of the rectangle
super + Print; m; c
    capture-desktop-video -m centered ~/'Desktop %c'.gif

# record region around mouse
# only move rectangle when mouse is 10-90 pixels from edge
super + Print; m; {1-9}
    capture-desktop-video -m {1-9}0 ~/'Desktop %c'.gif

# stop recording
super + Print; m; q
    capture-desktop-video -x

# capture series of photos
super + Print; c; b
    capture-camera-image -n5 -d3 ~/'Photo Booth %c ($n)'.png

# capture photo
super + Print; c; p
    capture-camera-image -d3 ~/'Selfie %c'.png

# capture video log
super + Print; c; v
    capture-camera-image -d3 ~/'Log %c'.mp4

# stop recording
super + Print; c; q
    capture-camera-image -x
