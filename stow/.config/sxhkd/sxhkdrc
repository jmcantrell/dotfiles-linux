# reload this config file
ctrl + shift + r
	killall -USR1 sxhkd

# lock the desktop session
ctrl + super + q
	xlock

# open a terminal (in the working directory of the active window)
super + Return
	cd "$(xpwd)" && terminal

# run command (sorted by most recently used)
super + space
    rofi -show run

alt + Tab
    rofi -show window

# copy snippet
super + Insert; c
	rofi-snip -c

# edit snippet
super + Insert; e
	rofi-snip -e

# create snippet from clipboard
super + Insert; s
	rofi-snip -s

# type snippet
super + Insert; t
	rofi-snip -t

# delete snippet
super + Insert; Delete
    rofi-snip -d

# copy password
super + Delete; c
	rofi-pass

# generate password
super + Delete; g
	rofi-pass -g

super + b
	browser

super + B
	browser-private

super + e
	cd "$(xpwd)" && terminal -e editor

super + f
	cd "$(xpwd)" && terminal -e ranger

super + {Up,Down}
	audio-volume {up,down}

super + alt + {Up,Down}
	audio-volume {max,mute}

XF86Audio{Raise,Lower}Volume
	audio-volume {up,down}

XF86AudioMute
	audio-volume mute

super + Pause
	playerctl play-pause

super + {Left,Right}
	playerctl {previous,next}

XF86Audio{Prev,Next}
	playerctl {previous,next}

# open a process manager
super + Escape
	terminal -e glances

# copy the working directory path of the active window
super + Home; u
	xpwd -cn

# copy the working directory path of the selected window
super + Home; w
	xpwd -cnw

# add an output oriented to the primary
super + End; {h,j,k,l}
	xrandr-orient {left-of,below,above,right-of}

# automatically add outputs, mirror primary, remove all
super + End; {d,c,q}
	xrandr-{detect,clone,off}

# capture images

super + Print; i; d
    capture-image-desktop

super + Print; i; u
    capture-image-desktop -u # active window

super + Print; i; w
    capture-image-desktop -w # selected window

super + Print; i; s
    capture-image-desktop -s # selected region

super + Print; i; c
    capture-image-camera

# capture videos

super + Print; v; d
    capture-video-desktop

super + Print; v; u
    capture-video-desktop -u # active window

super + Print; v; w
    capture-video-desktop -w # selected window

super + Print; v; s
    capture-video-desktop -s # selected region

super + Print; v; m
    capture-video-desktop -m # region follows mouse

super + Print; v; c
    capture-video-camera

# capture gifs

super + Print; g; d
    capture-gif-desktop

super + Print; g; u
    capture-gif-desktop -u # active window

super + Print; g; w
    capture-gif-desktop -w # selected window

super + Print; g; s
    capture-gif-desktop -s # selected region

super + Print; g; m
    capture-gif-desktop -m # region follows mouse

super + Print; g; c
    capture-gif-camera

super + Print; q
    capture-video-stop
