#!/usr/bin/env bash

# Set the desktop background to the given image.

set -eu

image=${1:-}
background=${XDG_CONFIG_HOME:-$HOME/.config}/background.png

if [[ -f $image ]]; then
    convert "$image" "$background"
fi

if [[ -f $background ]]; then
    hsetroot -cover "$background"
else
    hsetroot -solid black
fi
