#!/usr/bin/env bash

set -eu

delay=0
device=/dev/video0
directory=$(xdg-user-dir PICTURES)
file_name=camera_%FT%T%:z
file_type=png

name=${0##*/}
usage="Capture an image from a video device.

Usage:
    $name [OPTIONS] [FILE]

Options:
    -d NUMBER       number of seconds to wait before starting capture
                    (default: $delay)

    -D DIRECTORY    directory in which to store default output file
                    (default: $directory)

    -N FILENAME     filename to use for default output file
                    (default: $file_name)

    -E EXTENSION    extension to use for default output file
                    (default: $file_type)

Arguments:
    FILE            output file (used instead of default)
                    formats any sequences recognized by strftime
                    (default: $directory/$file_name.$file_type)
"

usage() {
    echo "$usage" >&2
    exit 0
}

die() {
    echo "ERROR: $*" >&2
    exit 1
}

while getopts ":d:D:N:E:h" option; do
    case $option in
    d) delay=$OPTARG ;;
    D) directory=$OPTARG ;;
    N) file_name=$OPTARG ;;
    E) file_type=$OPTARG ;;
    h) usage ;;
    *) die "Invalid option '$OPTARG'" ;;
    esac
done && shift $((OPTIND - 1))

output_file=$(date +"${1:-$directory/$file_name.$file_type}")

options=(-hide_banner -loglevel error)

options+=(-y -f v4l2 -i "$device" -frames:v 1)

if [[ -v delay ]]; then
    canberra-gtk-play -l "$delay" -i message
fi

mkdir -p "$(dirname "$output_file")"
ffmpeg "${options[@]}" "$output_file"

canberra-gtk-play -i screen-capture &

notify-send -i media-record \
    "Captured photo from camera" \
    "<u>${output_file/$HOME/\~}</u>" &

echo "$output_file"
