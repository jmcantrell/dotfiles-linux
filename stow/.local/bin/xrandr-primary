#!/usr/bin/env bash

# Set the primary output, and ensure save it.
# Usage: xrandr-primary [OUTPUT]

set -euo pipefail

output=${1:-}

if [[ -z $output ]]; then
    xrandr | grep '\bprimary\b' | cut -d' ' -f1
    exit 0
fi

xinitrc=$HOME/.xinitrc.d/xrandr-primary
echo "xrandr --output '$output' --primary &" >"$xinitrc"
sh "$xinitrc"
