#!/usr/bin/env bash

# Pretend rifle is xdg-open.

set -eu

files=()

for arg in "$@"; do
    if [[ $arg == file://* ]]; then
        # Since we're masquerading as xdg-open, we need to handle encoded file URLs
        # like: file:///path/to/file+with+spaces.txt
        files+=("$(urldecode "${arg#file://}")")
    else
        files+=("$arg")
    fi
done

exec rifle "${files[@]}"
