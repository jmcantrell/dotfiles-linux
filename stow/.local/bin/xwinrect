#!/usr/bin/env bash

# Get the geometry of the selected window.

set -e

readarray -t dimensions < <(
	xwininfo "$@" |
	grep -Ei "^ *(absolute upper-left [xy]|width|height)" |
	cut -d: -f2 | tr -d ' '
)

left=${dimensions[0]}
top=${dimensions[1]}
width=${dimensions[2]}
height=${dimensions[3]}

echo "${width}x${height}+${left}+${top}"
