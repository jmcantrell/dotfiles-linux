[global]
    # Notifications show on the focused display.
    follow = keyboard

    # Notifications are max 3 lines and at the bottom right.
    geometry = "300x3-10-10"

    # Show a progress bar with the option: -h int:value:<n>
    progress_bar = true

    # Show how many messages are currently hidden.
    indicate_hidden = yes

    # Padding on the top and bottom.
    padding = 15

    # Padding on the left and right.
    horizontal_padding = 15

    # Don't remove messages if the user is idle for longer than n.
    idle_threshold = 120 # 0 to disable

    # Allow a small subset of html markup in notifications.
    markup = full

    # Use some markup to enhance readability.
    format = "<b>%s</b>\n%b"

    # Use a monospace font.
    font = "Monospace 8"

    # Ignore newlines '\n' in notifications.
    ignore_newline = no

    # Sort messages by urgency.
    sort = yes

    # Disable indicators for URLs (U) and actions (A).
    show_indicators = no

    # Show age of message if older than n seconds.
    show_age_threshold = 60 # -1 to disable

    # Split long notifications into multiple lines.
    word_wrap = yes

    # Notifications from history do not timeout.
    sticky_history = yes

    # Allows parameter to -i to be just a name instead of a path.
    icon_path = /usr/share/icons/gnome/32x32/status/:/usr/share/icons/gnome/32x32/devices/:/usr/share/icons/gnome/32x32/actions/:/usr/share/icons/gnome/32x32/apps/:/usr/share/icons/hicolor/32x32/apps/

    # Position the icon to the left of the text.
    icon_position = left

    # Ensure icons are no larger than <n>x<n> pixels.
    max_icon_size = 32

    # Let the font decide the line height.
    line_height = 0

    # Browser to use for URL actions.
    browser = browser

[shortcuts]
    close = ctrl+grave
    history = ctrl+shift+grave

[frame]
    width = 2
    color = "#ffffff"

[urgency_low]
    background = "#008080"
    foreground = "#ffffff"
    timeout = 3

[urgency_normal]
    background = "#800080"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#800000"
    foreground = "#ffffff"
    timeout = 0

# vi:ft=cfg
