general {
	interval = 5
	colors = true
	color_good = '#00ff00'
	color_bad = '#ff0000'
}

order += "wireless _first_"
order += "ethernet _first_"
order += "dpms"
order += "disk /home"
order += "cpu_usage"
order += "memory"
order += "tztime pretty"

ethernet _first_ {
	format_up = "en %ip"
	format_down = "en down"
}

wireless _first_ {
	format_up = "wl %essid %ip"
	format_down = "wl down"
	on_click 1 = "exec --no-startup-id terminal -hold -e systemctl status iwd.service"
	on_click 3 = "exec --no-startup-id terminal -e iwctl"
}

dpms {
	icon_on = "dpms on"
	icon_off = "dpms off"
}

disk "/home" {
	format = "~ %avail"
	on_click 1 = "exec --no-startup-id terminal -hold -e df --si"
	on_click 3 = "exec --no-startup-id terminal -e ncdu ~"
}

cpu_usage {
	format = "cpu %usage"
	on_click 1 = "exec --no-startup-id terminal -e top"
}

memory {
	format = "mem %available"
	on_click 1 = "exec --no-startup-id terminal -hold -e free -th"
}

tztime pretty {
	format = "%c"
	on_click 1 = "exec --no-startup-id terminal -e i3settz"
	on_click 3 = "exec --no-startup-id date --rfc-3339=seconds | xsel -ib"
}
