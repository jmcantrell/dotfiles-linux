# reload configuration
ctrl + shift + r
	killall -USR1 sxhkd

super + space
    rofi -show run

alt + Tab
    rofi -show window

ctrl + super + q
	xlock

super + equal
    rofi -show calc

super + i
    rofimoji --action copy

# open whatever is on the clipboard
super + o
    xdg-open "$(xsel -ob)"

# copy path of active window
super + Home
    xpwd -cn

# copy path of selected window
ctrl + super + Home
    xpwd -csn

# launch programs in cwd of active window

super + Return
	cd "$(xpwd)" && terminal

super + e
	cd "$(xpwd)" && terminal -e editor

super + f
	cd "$(xpwd)" && terminal -e ranger

# manage text snippets

super + Insert; c
	rofi-snip copy

super + Insert; e
	rofi-snip edit

super + Insert; s
	rofi-snip save

super + Insert; t
	rofi-snip type

super + Insert; Delete
    rofi-snip delete

# manage passwords

super + Delete; c
	rofi-pass choose

super + Delete; g
	rofi-pass generate

# control audio

super + {Up,Down}
	audio-volume {up,down}

super + alt + {Up,Down}
	audio-volume {max,mute}

XF86Audio{Raise,Lower}Volume
	audio-volume {up,down}

XF86AudioMute
	audio-volume mute

# control media playback

super + Pause
	playerctl play-pause

super + {Left,Right}
	playerctl {previous,next}

XF86Audio{Prev,Next}
	playerctl {previous,next}

# connect displays

# add display oriented to primary
super + End; {h,j,k,l}
	xrandr-orient {left-of,below,above,right-of}

# add with default orientation
super + End; d
	xrandr-detect

# mirror primary display
super + End; c
	xrandr-clone

# disconnect non-primary displays
super + End; q
	xrandr-off

# capture images

super + Print; i; d
    capture-image-desktop

super + Print; i; u
    capture-image-desktop -u # active window

super + Print; i; w
    capture-image-desktop -w # selected window

super + Print; i; s
    capture-image-desktop -s # selected region

super + Print; i; c
    capture-image-camera

# capture videos

super + Print; v; d
    capture-video-desktop

super + Print; v; u
    capture-video-desktop -u # active window

super + Print; v; w
    capture-video-desktop -w # selected window

super + Print; v; s
    capture-video-desktop -s # selected region

super + Print; v; m
    capture-video-desktop -m # region follows mouse

super + Print; v; c
    capture-video-camera

# capture animated gifs

super + Print; g; d
    capture-gif-desktop # whole desktop

super + Print; g; u
    capture-gif-desktop -u # active window

super + Print; g; w
    capture-gif-desktop -w # selected window

super + Print; g; s
    capture-gif-desktop -s # selected region

super + Print; g; m
    capture-gif-desktop -m # region follows mouse

super + Print; g; c
    capture-gif-camera

# stop video capture from camera or desktop
super + Print; q
    capture-video-stop
