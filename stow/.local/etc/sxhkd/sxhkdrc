# Reload configuration.
ctrl + shift + r
	killall -USR1 sxhkd

super + space
    rofi -show run

alt + Tab
    rofi -show window

ctrl + super + q
	xlock

super + equal
    rofi -show calc

super + i
    rofimoji --action copy

# Open whatever is on the clipboard.
super + o
    xdg-open "$(xsel -ob)"

# Copy the path of the active window.
super + Home
    xpwd -cn

# Launch apps in working directory of active window:

super + Return
	cd "$(xpwd)" && terminal

super + e
	cd "$(xpwd)" && terminal -e editor

super + f
	cd "$(xpwd)" && terminal -e ranger

# Text snippets manager:

super + Insert; c
	rofi-snip -c # copy to clipboard

super + Insert; e
	rofi-snip -e # open in editor

super + Insert; s
	rofi-snip -s # save from clipboard

super + Insert; t
	rofi-snip -t # type in active window

super + Insert; Delete
    rofi-snip -d # delete

# Password manager:

super + Delete; c
	rofi-pass # copy

super + Delete; g
	rofi-pass -g # generate and copy

# Audio controls:

super + {Up,Down}
	audio-volume {up,down}

super + alt + {Up,Down}
	audio-volume {max,mute}

XF86Audio{Raise,Lower}Volume
	audio-volume {up,down}

XF86AudioMute
	audio-volume mute

# Media controls:

super + Pause
	playerctl play-pause

super + {Left,Right}
	playerctl {previous,next}

XF86Audio{Prev,Next}
	playerctl {previous,next}

# Connect displays:

# Add the display oriented to the primary.
super + End; {h,j,k,l}
	xrandr-orient {left-of,below,above,right-of}

# Add with default orientation.
super + End; d
	xrandr-detect

# Mirror the primary display.
super + End; c
	xrandr-clone

# Disconnect non-primary displays.
super + End; q
	xrandr-off

# Capture images:

super + Print; i; d
    capture-image-desktop

super + Print; i; u
    capture-image-desktop -u # active window

super + Print; i; w
    capture-image-desktop -w # selected window

super + Print; i; s
    capture-image-desktop -s # selected region

super + Print; i; c
    capture-image-camera

# Capture videos:

super + Print; v; d
    capture-video-desktop

super + Print; v; u
    capture-video-desktop -u # active window

super + Print; v; w
    capture-video-desktop -w # selected window

super + Print; v; s
    capture-video-desktop -s # selected region

super + Print; v; m
    capture-video-desktop -m # region follows mouse

super + Print; v; c
    capture-video-camera

# Capture animated gifs:

super + Print; g; d
    capture-gif-desktop # whole desktop

super + Print; g; u
    capture-gif-desktop -u # active window

super + Print; g; w
    capture-gif-desktop -w # selected window

super + Print; g; s
    capture-gif-desktop -s # selected region

super + Print; g; m
    capture-gif-desktop -m # region follows mouse

super + Print; g; c
    capture-gif-camera

super + Print; q
    capture-video-stop
