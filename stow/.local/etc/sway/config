set $alt   mod1
set $super mod4

floating_modifier $super

bindsym $super+q kill

default_border pixel
default_floating_border pixel

# Vim split semantics.
bindsym $super+s split v
bindsym $super+v split h

bindsym shift+$super+d layout default
bindsym shift+$super+s layout stacking
bindsym shift+$super+w layout tabbed
bindsym shift+$super+x layout toggle split

bindsym $super+h focus left
bindsym $super+j focus down
bindsym $super+k focus up
bindsym $super+l focus right

bindsym $alt+$super+h focus output left
bindsym $alt+$super+j focus output down
bindsym $alt+$super+k focus output up
bindsym $alt+$super+l focus output right

bindsym shift+$super+h move left
bindsym shift+$super+j move down
bindsym shift+$super+k move up
bindsym shift+$super+l move right

# Navigate the container layout tree.
bindsym $super+a focus parent
bindsym $super+z focus child

# Make the current window fullscreen for current/all displays.
bindsym       ctrl+$super+f fullscreen toggle
bindsym shift+ctrl+$super+f fullscreen toggle global

# Center a floating window.
bindsym $super+c move absolute position center

# Focus/move between tiled/floating layer.
bindsym       $super+BackSpace focus mode_toggle
bindsym shift+$super+BackSpace floating toggle

# Make a floating window always be visible.
bindsym ctrl+$super+BackSpace sticky toggle

# Focus/move between tiled/scratchpad layer.
bindsym       $super+backslash scratchpad show
bindsym shift+$super+backslash move scratchpad

# Never steal the focus. Just mark as urgent.
focus_on_window_activation urgent

# Focus the most urgent window.
bindsym $super+grave [urgent=latest] focus

bindsym           $super+apostrophe exec sway-mark goto
bindsym      ctrl+$super+apostrophe exec sway-mark set
bindsym     shift+$super+apostrophe exec sway-mark unset
bindsym ctrl+$alt+$super+apostrophe exec sway-mark clear

# Rename the workspace (prefix with 0-9 to focus with super+0-9).
bindsym $super+F2 exec swaymsg-input -p "workspace name" 'rename workspace to "%s"'

bindsym $super+1   workspace number 1
bindsym $super+2   workspace number 2
bindsym $super+3   workspace number 3
bindsym $super+4   workspace number 4
bindsym $super+5   workspace number 5
bindsym $super+6   workspace number 6
bindsym $super+7   workspace number 7
bindsym $super+8   workspace number 8
bindsym $super+9   workspace number 9
bindsym $super+0   workspace number 10
bindsym $super+n   workspace next_on_output
bindsym $super+p   workspace prev_on_output
bindsym $super+Tab workspace back_and_forth

bindsym shift+$super+1   move container to workspace number 1
bindsym shift+$super+2   move container to workspace number 2
bindsym shift+$super+3   move container to workspace number 3
bindsym shift+$super+4   move container to workspace number 4
bindsym shift+$super+5   move container to workspace number 5
bindsym shift+$super+6   move container to workspace number 6
bindsym shift+$super+7   move container to workspace number 7
bindsym shift+$super+8   move container to workspace number 8
bindsym shift+$super+9   move container to workspace number 9
bindsym shift+$super+0   move container to workspace number 10
bindsym shift+$super+n   move container to workspace next_on_output
bindsym shift+$super+p   move container to workspace prev_on_output
bindsym shift+$super+Tab move container to workspace back_and_forth

bindsym shift+$alt+$super+h move container to output left
bindsym shift+$alt+$super+j move container to output down
bindsym shift+$alt+$super+k move container to output up
bindsym shift+$alt+$super+l move container to output right

bindsym shift+ctrl+$super+h move workspace to output left
bindsym shift+ctrl+$super+j move workspace to output down
bindsym shift+ctrl+$super+k move workspace to output up
bindsym shift+ctrl+$super+l move workspace to output right

# Toggle the status bar.
bindsym $super+y bar mode toggle

set $resize_px  40
set $resize_ppt 4

# Increase the window size in the direction of an edge.
bindsym ctrl+$super+h resize grow left  $resize_px px or $resize_ppt ppt
bindsym ctrl+$super+j resize grow down  $resize_px px or $resize_ppt ppt
bindsym ctrl+$super+k resize grow up    $resize_px px or $resize_ppt ppt
bindsym ctrl+$super+l resize grow right $resize_px px or $resize_ppt ppt

# Decrease the window size in the direction of an edge.
bindsym ctrl+$alt+$super+h resize shrink left  $resize_px px or $resize_ppt ppt
bindsym ctrl+$alt+$super+j resize shrink down  $resize_px px or $resize_ppt ppt
bindsym ctrl+$alt+$super+k resize shrink up    $resize_px px or $resize_ppt ppt
bindsym ctrl+$alt+$super+l resize shrink right $resize_px px or $resize_ppt ppt

font pango:Monospace Bold 8

set $dark   #000000
set $bright #ffffff
set $normal #4c4c4c
set $border #191919
set $marker #667f33
set $urgent #993333
set $focus  #663399

client.background $dark

#class                  border  bg      text  indicator child_border
client.urgent           $bright $urgent $bright $marker   $bright
client.focused          $focus  $focus  $bright $marker   $focus
client.focused_inactive $border $border $bright $border   $border
client.unfocused        $border $border $normal $border   $border
client.placeholder      $border $border $normal $border   $border

bar {
    position top
    mode dock
    hidden_state hide
    modifier $super
	separator_symbol "  "
    status_command sway-status

	colors {
		background $dark
		separator  $bright
		statusline $bright

		#class             border  bg      text
		urgent_workspace   $bright $urgent $bright
		active_workspace   $bright $focus  $bright
		focused_workspace  $bright $focus  $bright
		inactive_workspace $border $dark   $normal
	}
}

# Menu to interact with the system.
set $mode_session session: (q)uit, (l)ock, (s)uspend, (h)ibernate, (r)eboot, (p)oweroff
mode "$mode_session" {
	bindsym q exec swaymsg exit,          mode "default"
	bindsym l exec loginctl lock-session, mode "default"
	bindsym s exec systemctl suspend,     mode "default"
	bindsym h exec systemctl hibernate,   mode "default"
	bindsym r exec systemctl reboot,      mode "default"
	bindsym p exec systemctl poweroff,    mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym shift+$super+q mode "$mode_session"

set $mode_capture_image capture image: (d)esktop, (f)ocused or (s)elected window, (r)egion, (c)amera
mode "$mode_capture_image" {
	bindsym d exec capture-image-desktop,    mode "default"
	bindsym f exec capture-image-desktop -f, mode "default"
	bindsym s exec capture-image-desktop -s, mode "default"
	bindsym r exec capture-image-desktop -r, mode "default"
	bindsym c exec capture-image-camera -d5, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

set $mode_capture_video capture video: (d)esktop, (f)ocused or (s)elected window, (r)egion, (c)amera
mode "$mode_capture_video" {
	bindsym d exec capture-video-desktop,    mode "default"
	bindsym f exec capture-video-desktop -f, mode "default"
	bindsym s exec capture-video-desktop -s, mode "default"
	bindsym r exec capture-video-desktop -r, mode "default"
	bindsym c exec capture-video-camera -d5, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

set $mode_capture_gif capture gif: (d)esktop, (f)ocused or (s)elected window, (r)egion, (c)amera
mode "$mode_capture_gif" {
	bindsym d exec capture-gif-desktop,    mode "default"
	bindsym f exec capture-gif-desktop -f, mode "default"
	bindsym s exec capture-gif-desktop -s, mode "default"
	bindsym r exec capture-gif-desktop -r, mode "default"
	bindsym c exec capture-gif-camera -d5, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym ctrl+$super+Print exec capture-video-stop

set $mode_capture capture: (i)mage, (v)ideo, (g)if
mode "$mode_capture" {
    bindsym i mode "$mode_capture_image"
    bindsym v mode "$mode_capture_video"
    bindsym g mode "$mode_capture_gif"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $super+Print mode "$mode_capture"

set $mode_snip snippet: (s)ave, (c)opy, (e)dit, (t)ype (d)elete
mode "$mode_snip" {
    bindsym s exec bemenu-snip save,   mode "default"
    bindsym c exec bemenu-snip copy,   mode "default"
    bindsym e exec bemenu-snip edit,   mode "default"
    bindsym t exec bemenu-snip type,   mode "default"
    bindsym d exec bemenu-snip delete, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $super+Insert mode "$mode_snip"

set $audio_up audio-volume up
bindsym $super+Up exec $audio_up
bindsym XF86AudioRaiseVolume exec $audio_up

set $audio_down audio-volume down
bindsym $super+Down          exec $audio_down
bindsym XF86AudioLowerVolume exec $audio_down

bindsym $super+$alt+Up exec audio-volume max

set $audio_mute audio-volume mute
bindsym ctrl+$super+Down exec $audio_mute
bindsym XF86AudioMute    exec $audio_mute

set $player_play playerctl play-pause
bindsym $super+Pause  exec $player_play
bindsym XF86AudioPlay exec $player_play

set $player_previous playerctl previous
bindsym $super+Left   exec $player_previous
bindsym XF86AudioPrev exec $player_previous

set $player_next playerctl next
bindsym $super+Right  exec $player_next
bindsym XF86AudioNext exec $player_next

set $brightness_up brightnessctl set 10%+
bindsym --locked $super+Prior        exec $brightness_up
bindsym --locked XF86MonBrightnessUp exec $brightness_up

set $brightness_down brightnessctl set 10%-
bindsym --locked $super+Next           exec $brightness_down
bindsym --locked XF86MonBrightnessDown exec $brightness_down

seat * hide_cursor when-typing enable

input * tap enabled

# Reload the configuration file.
bindsym shift+$super+c reload
bindsym  ctrl+$super+c exec visual ~/.local/etc/sway/config

bindsym      $super+Return exec cd "$(sway-pwd)" && terminal
bindsym $alt+$super+Return exec cd "$(sway-pwd)" && terminal --class floating

for_window [app_id="^floating$"] floating enable, resize set width 50 ppt height 40 ppt

bindsym      $super+Escape exec browser
bindsym $alt+$super+Escape exec browser-private

bindsym $super+t exec visual ~/TODO

bindsym $super+e exec cd "$(sway-pwd)" && visual
bindsym $super+f exec cd "$(sway-pwd)" && terminal -e ranger

bindsym       ctrl+grave exec makoctl dismiss
bindsym  $alt+ctrl+grave exec makoctl dismiss --all
bindsym shift+ctrl+grave exec makoctl restore

bindsym $alt+Tab exec bemenu-goto-window

bindsym $super+Space exec bemenu-run-mru

bindsym ctrl+$super+q exec swaylock

bindsym $super+o exec xdg-open "$(wl-paste -n)"

bindsym $super+Home      exec copy-window-cwd
bindsym ctrl+$super+Home exec copy-window-cwd -s

bindsym      $super+Delete exec bemenu-pass choose
bindsym ctrl+$super+Delete exec bemenu-pass generate

include /etc/sway/config.d/*

exec_always systemctl --user start sway-session.target
