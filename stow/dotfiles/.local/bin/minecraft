#!/usr/bin/env bash

# Run a minecraft client.
# Usage: minecraft [version] [directory]

set -e

current=$HOME/.minecraft

version=${1:-$(minecraft-version-latest)}
dir=${2:-$current}

mkdir -p "$dir"; cd "$dir"

[[ "$dir" = "$current" ]] || ln -sfvT "$dir" "$current"
[[ -x client ]] || install-minecraft "$version" .

exec ./client
