#!/usr/bin/env sh

# Install and configure a minecraft client.

set -e

dir=$HOME/.minecraft

mkdir -p "$dir"; cd "$dir"

curl -sL -o launcher.jar \
    https://s3.amazonaws.com/Minecraft.Download/launcher/Minecraft.jar

ln -sfvT "$HOME" screenshots

echo -e "#!/usr/bin/env sh\n\nexec java -Xmx4G -jar launcher.jar" >client
chmod +x client

echo "Run $dir/client to start" >&2
