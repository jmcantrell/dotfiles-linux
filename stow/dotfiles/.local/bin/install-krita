#!/usr/bin/env bash

# Download and install appimage for krita.

set -e

index=https://krita.org/en/download/krita-desktop/

url=$(
	curl -sL "$index" |
	grep -E 'https://[^"]+\.appimage' |
	sed 's/.*"\(.*\)".*/\1/'
)

if [[ ! $url ]]; then
	echo "Unable to get download url from $index" >&2
	exit 1
fi

bin=$HOME/.local/bin/krita

mkdir -p "$(dirname "$bin")"
curl -L -o "$bin" "$url"
chmod +x "$bin"
