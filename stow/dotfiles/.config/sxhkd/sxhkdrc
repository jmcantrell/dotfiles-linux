# lock the desktop session
ctrl + alt + l
	lock

# reload this config file
ctrl + shift + r
	killall -USR1 sxhkd

# run command (sorted by most recently used)
alt + space
	dmenu_run_mru

# run last command from dmenu
super + alt + space
	dmenu_run_prev

# open a terminal (in the working directory of the active window)
super + Return
	cd "$(xpwd)" && terminal

# copy the working directory path of the active window
super + d
	xpwd -cn

# copy the working directory path of the selected window
super + alt + d
	xpwd -cnw

super + b
	browser

super + B
	browser --incognito

# open an editor (in the working directory of the active window)
super + e
	cd "$(xpwd)" && terminal -e editor

# open a file manager (in the working directory of the active window)
super + f
	cd "$(xpwd)" && terminal -e ranger

super + {Home,End}
	volume-{max,mute}

super + {Prior,Next}
	volume-{up,down}

XF86AudioMute
	volume-mute

XF86Audio{Raise,Lower}Volume
	volume-{up,down}

super + Pause
	playerctl play-pause

super + alt + {Prior,Next}
	playerctl {previous,next}

XF86Audio{Prev,Next}
	playerctl {previous,next}

# open a process manager
super + Escape
	terminal -e glances

# select from previous items copied to the clipboard
super + grave
	clipmenu

# copy text snippets
super + Delete
	dmenu_snip -c

# edit text snippets
super + alt + Delete
	dmenu_snip -e

# create text snippet from clipboard
super + shift + Delete

# type text snippets
super + Insert
	dmenu_snip -t

# copy password
ctrl + alt + space
	dmenu_pass -c

# generate password
ctrl + alt + shift + space
	dmenu_pass -cg

# add an output oriented to the primary
super + o; {h,j,k,l}
	xrandr-orient {left-of,below,above,right-of}

# automatically add outputs or mirror primary
super + o; {d,c}
	xrandr-{detect,clone}

# remove all connected outputs
super + alt + o
	xrandr-off

# capture desktop
super + Print; d
	icap -ncoa -D ~/Media/screenshots

# capture active window
super + Print; u
	icap -ncoa -u -D ~/Media/screenshots

# capture selected window
super + Print; w
	icap -ncoa -w -D ~/Media/screenshots

# capture selected region
super + Print; s
	icap -ncoa -s -D ~/Media/screenshots

# record desktop
super + alt + Print; d
	mcap -ncoa

# record active window
super + alt + Print; u
	mcap -ncoa -u -D ~/Media/screencasts

# record selected window
super + alt + Print; w
	mcap -ncoa -w -D ~/Media/screencasts

# record selected region
super + alt + Print; s
	mcap -ncoa -s -D ~/Media/screencasts

# record region around mouse
# keep mouse in the center of the rectangle
super + alt + Print; c
	mcap -ncoa -m centered -D ~/Media/screencasts

# record region around mouse
# only move rectangle when mouse is 10-90 pixels from edge
super + alt + Print; {1-9}
	mcap -ncoa -m {1-9}0 -D ~/Media/screencasts

# stop recording
super + Pause
	mcap -x
