set $player_play     playerctl play-pause
set $player_next     playerctl next
set $player_previous playerctl previous

bindsym $super+Pause  exec $player_play
bindsym XF86AudioPlay exec $player_play

bindsym $super+Left   exec $player_previous
bindsym XF86AudioPrev exec $player_previous

bindsym $super+Right  exec $player_next
bindsym XF86AudioNext exec $player_next

# vi:ft=sway
