bindsym $super+Pause  exec playerctl play-pause
bindsym $super+Left   exec playerctl previous
bindsym $super+Right  exec playerctl next

# Dedicated keyboard media controls.
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next

# vi:ft=sway
