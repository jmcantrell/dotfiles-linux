bindsym --locked      $super+Prior exec set-display-brightness up
bindsym --locked      $super+Next  exec set-display-brightness down
bindsym --locked ctrl+$super+Prior exec set-display-brightness max
bindsym --locked ctrl+$super+Next  exec set-display-brightness min

# Dedicated keyboard brightness controls.
bindsym --locked XF86MonBrightnessUp   exec set-display-brightness up
bindsym --locked XF86MonBrightnessDown exec set-display-brightness down

# vi:ft=sway
