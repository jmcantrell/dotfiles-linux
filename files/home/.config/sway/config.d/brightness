set $brightness_up   set-display-brightness up
set $brightness_down set-display-brightness down

bindsym --locked $super+Prior        exec $brightness_up
bindsym --locked XF86MonBrightnessUp exec $brightness_up

bindsym --locked $super+Next           exec $brightness_down
bindsym --locked XF86MonBrightnessDown exec $brightness_down

bindsym --locked ctrl+$super+Prior exec set-brightness max
bindsym --locked ctrl+$super+Next  exec set-brightness min

# vi:ft=sway
