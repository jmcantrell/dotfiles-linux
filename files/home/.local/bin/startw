#!/usr/bin/env bash

# Start a wayland window manager with logging after loading its environment.

set -euo pipefail
shopt -s nullglob

for file in ~/.wprofile.d/*; do
    if [[ -f $file ]] && ! . "$file"; then
        printf "Unable to source file: %q\n" "$file" >&2
        exit 1
    fi
done
unset file

export XDG_CURRENT_DESKTOP=$DESKTOP
exec "$DESKTOP" 2>&1 | logger -t "$DESKTOP"
