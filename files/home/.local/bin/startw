#!/usr/bin/env bash

# Start wayland with logging after loading its environment.

set -eu

for file in ~/.wprofile.d/*; do
    [[ -f $file ]] || continue
    . "$file" || echo "ERROR: Unable to load: $file" >&2
done
unset file

export XDG_CURRENT_DESKTOP=sway
exec "$XDG_CURRENT_DESKTOP" 2>&1 | logger -t "$XDG_CURRENT_DESKTOP"
