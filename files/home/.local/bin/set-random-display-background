#!/usr/bin/env bash

# Set a random background image.
# It's assumed that all files in the given directories are images.

set -euo pipefail

file=$(find -L "$@" -type f | shuf -n1)

if [[ -z $file ]]; then
    printf "No files in the given directories\n" >&2
    exit 1
fi

set-display-background "$file"
