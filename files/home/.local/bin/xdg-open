#!/usr/bin/env bash

# Pretend rifle is xdg-open.
# Usage: xdg-open FILE...

set -euo pipefail

args=()
for arg in "$@"; do
    # Since we're masquerading as xdg-open, we need to handle file URLs
    if [[ $arg == file://* ]]; then
        arg=${arg#file://}
    fi
    args+=("$arg")
done

exec rifle "${args[@]}"
