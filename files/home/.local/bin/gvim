#!/usr/bin/env bash

# Pretend that vim in a terminal is gvim.

# Recognize the -f/--nofork option:

fork=1
args=()

for arg in "$@"; do
    if [[ $arg == -f || $arg == --nofork ]]; then
        fork=0
    else
        args+=("$arg")
    fi
done

cmd=(vim "${args[@]}")

if [[ ! -v DISPLAY && ! -v WAYLAND_DISPLAY ]]; then
    exec "${cmd[@]}"
fi

cmd=(terminal "${cmd[@]}")

if ((fork)); then
    "${cmd[@]}" &
    disown
else
    exec "${cmd[@]}"
fi
