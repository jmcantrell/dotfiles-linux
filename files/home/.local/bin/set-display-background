#!/usr/bin/env bash

# Set a desktop background or restore the previous one.

set -eu

image=${1:-}
background=$HOME/.background

if [[ -n $image ]]; then
    cp -vL "$image" "$background"
fi

if [[ -v SWAYSOCK && -f $background ]]; then
    swaymsg output "*" background "$background" fill "#000000"
fi
