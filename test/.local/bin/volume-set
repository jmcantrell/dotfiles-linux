#!/usr/bin/env bash

# Set the audio volume and show a notification.

volume=${1:?missing audio volume}  # -2% +5% 100%
volume=${volume%%%}  # pamixer doesn't like percents

case "$volume" in
	-*)
		pamixer --allow-boost --decrease "${volume##-}"
		icon=audio-volume-low
		;;
	+*)
		pamixer --allow-boost --increase "${volume##+}"
		icon=audio-volume-medium
		;;
	*)
		pamixer --set-volume "$volume"
		icon=audio-volume-high
		;;
esac

icon=$icon notify-volume
